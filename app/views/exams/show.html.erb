    <div class="row">
    
    
    	<div class="col-md-offset-4">
    
    		<div>
    
    			<h1><%= @exam.nome %></h1>
    			<h3>
    			     <span>Prof.</span> 
    			     <a href = "<%= @exam.sito %>"  target=”_blank”><%= @exam.professore %> </a>
    			        <% if @exam.professore2 != "" %>, 
    			        
    			            <a href = "<%= @exam.sito %>"  target=”_blank”><%= @exam.professore2 %> </a>
    			        
    			        <% end %>
    			        
    			     </a>
    			 </h3>
    
    		</div>
    		<div class="links btn-group">	
            	<% if current_user.id == 1 %>  
                        <%= link_to "Edit", edit_exam_path(@exam), class: "btn btn-warning" %>
        			    <%= link_to "Delete", exam_path(@exam), method: :delete, data: { confirm: "Sei sicuro?" }, class: "btn btn-danger" %>    		
            	<% end %>	
            </div>	
    	</div>
        
    
    </div>
    
    <div class="row">
    
    	<div class="col-md-4">
    
    		
    
    			<h1>Gruppi di studio</h1>
    			
    
        		<div class="col-md-12">
        			<%= render @exam.groups %>
        			
        		</div>	
    
    		    
    
    			<div>
    				<%= link_to "Aggiungi Gruppo", new_exam_group_path(@exam),  method: :get, class: "btn btn-default" %>
    			</div>
    
    	</div>	
    		
    	<div class="col-md-4 col-md-offset-4">
    
    		
    
    			<h1>Studenti Tutor</h1>
    			
    			<div class="col-md-12">
        			<%= render @exam.tutors %>
        			
        		 </div>	
    
                <% if Tutor.where(:exam_id => @exam.id, :user_id => current_user.id).count == 0 %>  
        			<div>
        				<%= link_to "Diventa Studente Tutor", new_exam_tutor_path(@exam), class: "btn btn-default" %>
        			</div>
                <% end %>
    			
    
    	</div>
    	

    </div>
    
    
    
   

